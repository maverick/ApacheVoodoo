log4perl.logger.Apache.Voodoo = TRACE, voodoofile
log4perl.logger.cpetracking   = TRACE, cpetrackingfile
log4perl.logger.test          = TRACE, testfile
    
log4perl.appender.voodoofile          = Log::Log4perl::Appender::File
log4perl.appender.voodoofile.filename = /tmp/voodoo.log
log4perl.appender.voodoofile.layout   = Log::Log4perl::Layout::SimpleLayout

log4perl.appender.cpetrackingfile          = Log::Log4perl::Appender::File
log4perl.appender.cpetrackingfile.filename = /tmp/cpetracking.log
log4perl.appender.cpetrackingfile.layout   = Log::Log4perl::Layout::SimpleLayout

log4perl.appender.testfile          = Log::Log4perl::Appender::File
log4perl.appender.testfile.filename = /tmp/test.log
log4perl.appender.testfile.layout   = Log::Log4perl::Layout::SimpleLayout
